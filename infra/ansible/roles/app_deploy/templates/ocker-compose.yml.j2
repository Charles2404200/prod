services:
  backend:
    image: "{{ backend_image }}:{{ image_tag }}"
    container_name: backend
    env_file: []
    environment:
      - PORT=3000
      - JWT_SECRET={{ jwt_secret }}
      - MONGO_URI={{ mongo_uri }}
    expose:
      - "3000"
    restart: unless-stopped

  frontend:
    image: "{{ frontend_image }}:{{ image_tag }}"
    container_name: frontend
    expose:
      - "80"
    restart: unless-stopped

  nginx:
    image: "{{ nginx_image }}"
    container_name: nginx
    ports:
      - "80:80"
    volumes:
      - "{{ deploy_root }}/nginx/nginx.conf:/etc/nginx/nginx.conf:ro"
    depends_on:
      - frontend
      - backend
    restart: unless-stopped

networks:
  default:
    name: rmit_net
